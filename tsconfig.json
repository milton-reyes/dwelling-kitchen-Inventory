{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "rootDirs": [".", "src"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"            ]
        },
    },
    "include": [
        "src/**/*",
        "src/util/*.d.ts"
    ]
}